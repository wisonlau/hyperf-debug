{
    "name": "wisonlau/hyperf-debug",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": [
        "php",
        "swoole",
        "hyperf"
    ],
    "authors": [
        {
            "name": "wisonlau",
            "email": "122022066@qq.com"
        }
    ],
    "description": "Debug for Hyperf",
    "autoload": {
        "psr-4": {
            "Wisonlau\\HyperfDebug\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Wisonlau\\HyperfDebug\\ConfigProvider"
        }
    }
}
